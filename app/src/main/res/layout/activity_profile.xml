<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


   <include
        android:id="@+id/include_profile"
        layout="@layout/fragment_nav"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_last_name"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_picture"
        app:layout_constraintStart_toStartOf="@+id/profile_picture"
        app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

    <TextView
     android:id="@+id/profile_username"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="@string/profile_username"
     android:textSize="20sp"
     app:layout_constraintEnd_toEndOf="@+id/profile_name"
     app:layout_constraintHorizontal_bias="0.504"
     app:layout_constraintStart_toStartOf="@+id/profile_name"
     app:layout_constraintTop_toBottomOf="@+id/profile_name" />

 <ImageView
     android:id="@+id/profile_picture"
     android:layout_width="150dp"
     android:layout_height="150dp"
     android:contentDescription="@string/profile_picture_content_desc"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.306"
     app:srcCompat="@drawable/profile_logo_circle" />

 <ImageView
        android:id="@+id/profile_premium"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/profile_premium_content_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.261"
        app:srcCompat="@drawable/verified_logo" />

 <Button
     android:id="@+id/profile_history_button"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="96dp"
     android:text="@string/history_button"
     app:layout_constraintEnd_toEndOf="@+id/profile_username"
     app:layout_constraintStart_toStartOf="@+id/profile_username"
     app:layout_constraintTop_toBottomOf="@+id/profile_username" />

 <Button
     android:id="@+id/profile_settings_button"
     android:layout_width="163dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:text="@string/settings_button"
     app:layout_constraintEnd_toEndOf="@+id/profile_history_button"
     app:layout_constraintStart_toStartOf="@+id/profile_history_button"
     app:layout_constraintTop_toBottomOf="@+id/profile_history_button" />

</androidx.constraintlayout.widget.ConstraintLayout>